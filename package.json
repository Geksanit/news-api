{
  "name": "nodejs-web-server",
  "version": "1.0.0",
  "description": "Web server with REST API",
  "main": "app.ts",
  "scripts": {
    "tsc": "tsc",
    "build": "tsc",
    "build:watch": "tsc -w",
    "start": "node dist/app.js",
    "start:watch": "nodemon dist/app.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\"  \"npm run build:watch\" \"npm run start:watch\"",
    "lint": "eslint . --ext .js,.ts && tsc --noEmit --incremental false --pretty",
    "lint:autofix": "eslint . --ext .js,.ts --fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Geksanit/nodejs-web-server.git"
  },
  "keywords": [],
